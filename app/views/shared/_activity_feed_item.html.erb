<li id="<%= activity_feed_item.id %>">
  <span class="user">
    <%= link_to activity_feed_item.title, activity_feed_item.user %>
  </span><br>
  <!-- <%= link_to gravatar_for(activity_feed_item.user), activity_feed_item.user %> -->
  <span class="user">
    <%= link_to activity_feed_item.user.name, activity_feed_item.user %>
  </span>
  <span class="content"><%= activity_feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(activity_feed_item.created_at) %> ago.
  </span>
  <% if current_user?(activity_feed_item.user) %>
    <%= link_to "delete", activity_feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: activity_feed_item.content %>
  <% end %>
</li>
