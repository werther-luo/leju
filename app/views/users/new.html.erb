<% provide(:title, '注册新用户') %>
<h1>注册新用户</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :昵称 %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :密码 %>
      <%= f.password_field :password %>

      <%= f.label :密码确认 %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "注册账户", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>